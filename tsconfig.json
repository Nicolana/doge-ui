{
  "compilerOptions": {
    "target": "es2019",
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "allowJs": true,
    "rootDir": "./packages",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./dist/",
    "newLine": "lf",
    "paths": {
      "@/*": ["./packages/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "./packages/**/*.ts", "./packages/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
